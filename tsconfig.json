{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"lib": ["dom", "esnext"],
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"pretty": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["src"]
}
